    <script>
      <% if(flash.success && flash.success.length>0) { %>
        new Noty({
             theme:"nest",
              text: "<%= flash.success %>",
              type:"success",
              layout:"topRight",
              timeout:1500

          }).show();
      <% } %>

      <% if(flash.error && flash.error.length>0) { %>
        new Noty({
             theme:"nest",
              text: "<%= flash.error %>",
              type:"error",
              layout:"topRight",
              timeout:1500

          }).show();
      <% } %>
    </script>
